# Unified from original + rewritten config

# -------------------------------------------------------------------------------------------------

# --- Variables & Aliases ---

$terminal    = kitty
$fileManager = thunar
$menu        = rofi -show drun
$browser     = chromium
$textEditor  = nano
$scripts     = $HOME/user_scripts
$osdclient   = swayosd-client

# -------------------------------------------------------------------------------------------------

# 1. MAIN MODIFIER

# -------------------------------------------------------------------------------------------------

$mainMod = SUPER

# -------------------------------------------------------------------------------------------------

# 2. LAUNCHERS, MENUS & CORE UX

# -------------------------------------------------------------------------------------------------

# Main launcher

bindd = $mainMod, SUPER_L, Launcher, exec, pkill rofi || rofi -show drun
bindd = $mainMod, A, Applications Menu, exec, rofi -show drun

# System menu (original behavior preserved)

bindd = $mainMod, SPACE, System Menu, exec, uwsm-app -- pkill rofi; $scripts/rofi/system_menu.sh

# Keybind search

bindd = $mainMod, K, Keybind Search, exec, uwsm-app -- pkill rofi; $scripts/rofi/keybindings.sh

# Emoji / Calculator

bindd = $mainMod CTRL, SPACE, Emoji Picker, exec, uwsm-app -- pkill rofi; $scripts/rofi/emoji.sh
bindd = $mainMod CTRL SHIFT, SPACE, Calculator, exec, uwsm-app -- pkill rofi; $scripts/rofi/calculator.sh

# Power / Logout

bindd = ALT SHIFT, SPACE, Power Menu, exec, uwsm-app -- pkill rofi; rofi -show power-menu -modi power-menu:$scripts/rofi/powermenu.sh
bindd = ALT, F4, Logout Menu, exec, uwsm-app -- $scripts/wlogout/wlogout_scale.sh

# Lock screen

bindd = $mainMod, ESCAPE, Lock Screen, exec, uwsm-app -- $scripts/hyprlock/lock.sh

# -------------------------------------------------------------------------------------------------

# 3. APPLICATION SHORTCUTS

# -------------------------------------------------------------------------------------------------

bindd = $mainMod, T, Open Terminal, exec, uwsm-app -- $terminal
bindd = $mainMod, F, Open Files, exec, uwsm-app $fileManager
bindd = $mainMod, B, Open Browser, exec, uwsm-app -- $browser
bindd = $mainMod, R, Text Editor, exec, uwsm-app -- $terminal -e $textEditor

# System utilities

bindd = ALT, 1, Wi-Fi Manager, exec, uwsm-app -- $terminal -e wifitui
bindd = ALT, 2, Bluetooth Manager, exec, uwsm-app -- blueman-manager
bindd = ALT, 3, Audio Mixer, exec, uwsm-app -- pavucontrol
bindd = ALT, 4, Wallpaper App, exec, uwsm-app -- waypaper
bindd = $mainMod, apostrophe, Cycle Wallpaper, exec, uwsm-app -- $scripts/theme_matugen/random_theme.sh

# --- Notification Panel --- 

bindd = $mainMod, N, Toggle Notif Panel, exec, swaync-client -t

# -------------------------------------------------------------------------------------------------

# 4. WINDOW MANAGEMENT

# -------------------------------------------------------------------------------------------------

# Focus movement

binded = $mainMod, left, Focus Left, movefocus, l
binded = $mainMod, right, Focus Right, movefocus, r
binded = $mainMod, up, Focus Up, movefocus, u
binded = $mainMod, down, Focus Down, movefocus, d

# Move windows

binded = $mainMod SHIFT, left, Move Left, movewindow, l
binded = $mainMod SHIFT, right, Move Right, movewindow, r
binded = $mainMod SHIFT, up, Move Up, movewindow, u
binded = $mainMod SHIFT, down, Move Down, movewindow, d

# Resize windows

binded = $mainMod ALT, left, Resize Left, resizeactive, -30 0
binded = $mainMod ALT, right, Resize Right, resizeactive, 30 0
binded = $mainMod ALT, up, Resize Up, resizeactive, 0 -30
binded = $mainMod ALT, down, Resize Down, resizeactive, 0 30

# Swap window positions (COSMIC-style)

binded = $mainMod X, left,  Swap Left,  swapwindow, l
binded = $mainMod X, right, Swap Right, swapwindow, r
binded = $mainMod X, up,    Swap Up,    swapwindow, u
binded = $mainMod X, down,  Swap Down,  swapwindow, d

# Window actions

bindd = $mainMod, G, Toggle Float, togglefloating
bindd = $mainMod, Q, Close Window, killactive
bindd = $mainMod, M, Maximize Window, fullscreen, 1
bindd = $mainMod SHIFT, M, Fullscreen Window, fullscreen, 0

# --- Accessibility: Zoom --- 
cursor:zoom_disable_aa = true 
# Zoom In 
binded = SUPER, equal, Zoom In, exec, sh -c "hyprctl keyword cursor:zoom_factor \"$(hyprctl getoption cursor:zoom_factor | awk 'NR==1 {print $2 * 1.25}')\"" 

# Zoom Out 
binded = SUPER, minus, Zoom Out, exec, sh -c "hyprctl keyword cursor:zoom_factor \"$(hyprctl getoption cursor:zoom_factor | awk 'NR==1 {val = $2 / 1.25; if (val < 1.0) val = 1.0; print val}')\"" 

# Reset Zoom 
bindld = SUPER, BACKSPACE, Reset Zoom, exec, hyprctl keyword cursor:zoom_factor 1.0


# -------------------------------------------------------------------------------------------------

# 5. WORKSPACES

# -------------------------------------------------------------------------------------------------

# Workspace overview (plugin-free)

bindd = $mainMod, D, Workspace Overview, exec, rofi -show window

# Workspace overview (hyprexpo)

bind = ALT, TAB, exec,	hyprexpo

# Direct workspace access

bindd = $mainMod, 1, WS 1, workspace, 1
bindd = $mainMod, 2, WS 2, workspace, 2
bindd = $mainMod, 3, WS 3, workspace, 3
bindd = $mainMod, 4, WS 4, workspace, 4
bindd = $mainMod, 5, WS 5, workspace, 5
bindd = $mainMod, 6, WS 6, workspace, 6
bindd = $mainMod, 7, WS 7, workspace, 7
bindd = $mainMod, 8, WS 8, workspace, 8
bindd = $mainMod, 9, WS 9, workspace, 9
bindd = $mainMod, 0, WS 10, workspace, 10

# Move window to workspace

bindd = $mainMod SHIFT, 1, Move WS 1, movetoworkspace, 1
bindd = $mainMod SHIFT, 2, Move WS 2, movetoworkspace, 2
bindd = $mainMod SHIFT, 3, Move WS 3, movetoworkspace, 3
bindd = $mainMod SHIFT, 4, Move WS 4, movetoworkspace, 4
bindd = $mainMod SHIFT, 5, Move WS 5, movetoworkspace, 5
bindd = $mainMod SHIFT, 6, Move WS 6, movetoworkspace, 6
bindd = $mainMod SHIFT, 7, Move WS 7, movetoworkspace, 7
bindd = $mainMod SHIFT, 8, Move WS 8, movetoworkspace, 8
bindd = $mainMod SHIFT, 9, Move WS 9, movetoworkspace, 9
bindd = $mainMod SHIFT, 0, Move WS 10, movetoworkspace, 10

# Cycle workspaces

binded = $mainMod, TAB, Last Workspace, workspace, previous
binded = $mainMod SHIFT, TAB, Next Workspace, workspace, e+1
binded = $mainMod CTRL, TAB, Prev Workspace, workspace, e-1

# Special workspace

bindd = $mainMod, Z, Toggle Scratchpad, togglespecialworkspace, magic
bindd = $mainMod SHIFT, Z, Move to Scratchpad, movetoworkspace, special:magic

# -------------------------------------------------------------------------------------------------
6. SCREENSHOT, CLIPBOARD & COLOR

# -------------------------------------------------------------------------------------------------

bindd = $mainMod, V, Clipboard History, exec, uwsm-app -- pkill rofi; rofi -modi "clipboard:$scripts/rofi/rofi_cliphist.sh" -show clipboard
bindd = $mainMod, P, Color Picker, exec, pkill hyprpicker || hyprpicker -a

# Screenshots

bindd = $mainMod, S, Screenshot Selection, exec, slurp | grim -g - - | wl-copy
bindd = $mainMod SHIFT, S, Screenshot Full, exec, grim - | wl-copy
bindd = , Print, Annotate Selection, exec, slurp | grim -g - - | uwsm-app -- swappy -f -
bindd = SHIFT, Print, Annotate Full, exec, grim - | uwsm-app -- swappy -f -

# -------------------------------------------------------------------------------------------------

# 7. MEDIA, AUDIO & BRIGHTNESS

# -------------------------------------------------------------------------------------------------

bindeld = ,XF86AudioRaiseVolume, Volume Up, exec, $osdclient --output-volume raise
bindeld = ,XF86AudioLowerVolume, Volume Down, exec, $osdclient --output-volume lower
bindeld = ,XF86AudioMute, Mute, exec, $osdclient --output-volume mute-toggle
bindeld = ,XF86AudioMicMute, Mic Mute, exec, $osdclient --input-volume mute-toggle
bindeld = ,XF86MonBrightnessUp, Brightness Up, exec, $osdclient --brightness raise
bindeld = ,XF86MonBrightnessDown, Brightness Down, exec, $osdclient --brightness lower

# Player controls

bindld = ,XF86AudioNext, Next Track, exec, $osdclient --playerctl next
bindld = ,XF86AudioPrev, Prev Track, exec, $osdclient --playerctl previous
bindld = ,XF86AudioPlay, Play/Pause, exec, $osdclient --playerctl play-pause
bindld = ,XF86AudioPause, Play/Pause, exec, $osdclient --playerctl play-pause

# -------------------------------------------------------------------------------------------------

# 8. MOUSE

# -------------------------------------------------------------------------------------------------

binddm = $mainMod, mouse:272, Move Window, movewindow
binddm = $mainMod, mouse:273, Resize Window, resizewindow

